    <i class="icon icon-list-alt"></i>
  </a>
</div>

<div class="btn-toolbar">
  <div class="btn-group">
    <a href="/messages/new" class="btn" rel="tooltip" title="Compose" data-placement="bottom">
      <i class="icon icon-pencil"></i>
    </a>
    <a href="/sync" class="btn" rel="tooltip" title="Sync Mailboxes" data-placement="bottom">
      <i class="icon icon-refresh"></i>
    </a>
  </div>
</div>

<div class="btn-group pull-right">
